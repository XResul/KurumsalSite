@model KurumsalSite.Models.FooterViewModel


<style>
    .footer a {
        color: #d9d9d9;
        text-decoration: none;
    }

    .footer a:hover{
        color:#ffffff;
    }

    .footer {
        color: #d9d9d9;
        background-color: #4e4d4d;
    }

    .list-style {
        list-style-type: none !important;
        cursor: pointer;
        font-size: 16px;
        opacity: .8;
    }

    .copy-right {
        font-size: .75rem;
        opacity: .8;
    }

    .Analyst {
        width: 87.7px;
        height: 23.7px;
        margin: 10.7px 0 5.2px 10.2px;
        color: #fff;
    }

    

    /*SOCİAL MEDİA İCONS CSS */

    .social-icons {
        padding: 30px;
        /*background-color: #00506b;*/
        text-align: center;
    }

        .social-icons a {
            color: #fff;
            line-height: 30px;
            font-size: 30px;
            margin: 0 5px;
            text-decoration: none;
        }

            .social-icons a i {
                line-height: 30px;
                font-size: 30px;
                -webkit-transition: all 200ms ease-in;
                -webkit-transform: scale(1);
                /*-ms-transition: all 200ms ease-in;*/
                -ms-transform: scale(1);
                -moz-transition: all 200ms ease-in;
                -moz-transform: scale(1);
                transition: all 200ms ease-in;
                transform: scale(1);
            }

            .social-icons a:hover i {
                box-shadow: 0px 0px 150px #000000;
                z-index: 2;
                -webkit-transition: all 200ms ease-in;
                -webkit-transform: scale(1.5);
                /*-ms-transition: all 200ms ease-in;*/
                -ms-transform: scale(1.5);
                -moz-transition: all 200ms ease-in;
                -moz-transform: scale(1.5);
                transition: all 200ms ease-in;
                transform: scale(1.5);
            }
    /*SOCİAL MEDİA İCONS CSS */
</style>

<footer class="text-center footer text-center">
    <div class="container">

        <div class="row" style="padding-left:0px;padding-right:0px; margin-left:0px; margin-right:0px;">

            <!--Logo Start-->
            <div class="col-md-4 ">
                <h1 class="pb-3" style="color:red; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Güler <span class="Analyst" style="color: black; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"> Çelik </span></h1>

                <p class="copy-right"> Copyright © 2023-2024 RSL Resul Binici</p>
            </div>
            <!--Logo end-->
            <!--Solutions Start-->
            <div class="col-md-3">
                <h2 class="pb-3">Kurumsal </h2>
                <ul class="list-style ps-0 ">
                    @foreach (var item in Model.LastPage)
                    {

                        <li class="pb-3">

                            <a href="~/Page/PageDetail/@item.PageID">@item.PageTitle</a>
                        </li>

                    }

                </ul>
            </div>
            <!--Solutions end-->
            <!--Quick links Start-->
            <div class="col-md-3 ">
                <h2 class="pb-3"> Ürünler </h2>
                <ul class="list-style ps-0">

                    <li class="pb-3">
                        @foreach (var item in Model.OurProduct)
                        {
                            <a href="~/Product/ProductDetail/@item.ProductID">
                                @item.ProductName

                            </a>
                            <br />
                            <br />
                        }

                    </li>
                </ul>
            </div>
            <!--QUick links end-->
            <!--Other Start-->
            <div class="col-md-2 ">
                <h2 class="pb-3"> Projeler </h2>
                <ul class="list-style ps-0">
                    @foreach (var item in Model.OurProjectG)
                    {
                        <li class="pb-3">
                            <a href="~/ProjectT/Project_Detail/@item.ProjectID">
                                @item.ProjectName
                            </a>
                        </li>

                    }
                </ul>
            </div>
            <!--Other end-->
        </div>

    </div>
    <!-- Grid container -->
    <div class="col-md-12">

        @* Deger Vediğimizde hata cıkıyor  *@


        <div class="social-icons">

            <a href="@Model.Social.Facebook" title="facebook">
                <i class="fa fa-facebook-square" aria-hidden="true"></i>
            </a>

            <a href="@Model.Social.Twitter" title="twitter">
                <i class="fa fa-twitter-square" aria-hidden="true"></i>
            </a>

            <a href="@Model.Social.Instagram" title="instagram">
                <i class="fa fa-instagram" aria-hidden="true"></i>
            </a>

            <a href="@Model.Social.Youtube" title="youtube">
                <i class="fa fa-youtube-square" aria-hidden="true"></i>
            </a>

            <a href="@Model.Social.Linkedin" title="linkedin">
                <i class="fa fa-linkedin-square" aria-hidden="true"></i>
            </a>

            @*<a href="#" title="pinterest">
                    <i class="fa fa-pinterest-p" aria-hidden="true"></i>
                </a>

                <a href="#" title="camera">
                    <i class="fa fa-camera-retro" aria-hidden="true"></i>
                </a>*@

        </div>


    </div>
    <!-- Grid container -->
    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        Copyright © 2023-2024 RSL Resul Binici

    </div>
    <!-- Copyright -->
</footer>