@model KurumsalSite.Models.ContactViewModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/ContactFile/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/ContactFile/bootstrap.min.js"></script>
