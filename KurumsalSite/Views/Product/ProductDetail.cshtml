@model KurumsalEntityLayer.Entity.Product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }


    main {
        max-width: 800px;
        margin: 20px auto;
    }

    .detaylar-karti {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .slider {
        display: flex;
        overflow: hidden;
        flex-direction: column;
    }

    .buyuk-resim {
        flex-grow: 1;
    }

        .buyuk-resim img {
            width: 100%;
            height: auto;
        }

    .slider-kucuk-resimler {
        display: flex;
        overflow-x: auto;
    }

    .kucuk-resim {
        width: 50px;
        height: 50px;
        margin: 5px;
        cursor: pointer;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .detaylar-icerik {
        padding: 20px;
    }

        .detaylar-icerik h2 {
            color: #333;
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .detaylar-icerik p {
            color: #666;
            font-size: 1em;
        }

        .detaylar-icerik ul {
            list-style: none;
            padding: 0;
        }

        .detaylar-icerik li {
            margin-bottom: 5px;
            color: #888;
        }

    .footer {
        text-align: center;
        padding: 10px;
        background-color: #333;
        color: #fff;
    }


/*Button Tag İ*/
 
    main {
        max-width: 800px;
        margin: 20px auto;
        text-align: center;
    }

    .link-butonu {
        display: inline-block;
        padding: 15px 30px;
        font-size: 18px;
        color: #fff;
        text-decoration: none;
        background-color: #007BFF;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .link-butonu:hover {
            background-color: rgba(0, 0, 0, 0.1);
        }





/*Button Tag İ*/
</style>


<body>
    <header class="benner">
        <h1>Ürün Detayları</h1>
    </header>

    <main>
        <div class="detaylar-karti">
            <div class="slider">
                <div class="buyuk-resim">
                    <img src="@Model.ImageURL" alt="Ürün Resmi" id="buyukResim">
                </div>


            </div>
            <div class="detaylar-icerik">
                <h2>@Model.ProductName</h2>
                <p>@Html.Raw(Model.Description)</p>
                <ul>
                    <li>
                       
                       
                            <a href="~/Product/ProductImageDetail/@Model.ProductID" class="link-butonu">
                               Ürün Resimleri 
                            </a>
                       


                    </li>
                </ul>
            </div>
        </div>
    </main>

</body>
