@model KurumsalEntityLayer.Entity.Project
@{
    ViewBag.Title = "Project_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>

    <style>
        body {
        }

      

        main {
            max-width: 800px;
            margin: 20px auto;
        }

        .detaylar-karti {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .detaylar-karti img {
                width: 100%;
                height: auto;
                border-bottom: 1px solid #ddd;
            }

        .detaylar-icerik {
            padding: 20px;
        }

            .detaylar-icerik h2 {
                text-align: center;
                color: #333;
                font-size: 1.5em;
                margin-bottom: 10px;
            }

            .detaylar-icerik p {
                color: #666;
                font-size: 1em;
            }

            .detaylar-icerik ul {
                list-style: none;
                padding: 0;
            }

            .detaylar-icerik li {
                margin-bottom: 5px;
                color: #888;
            }


        .link-butonu {
            position:center;
            display: inline-block;
            padding: 15px 30px;
            font-size: 18px;
            color: #fff;
            text-decoration: none;
            background-color: #007BFF;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .link-butonu:hover {
                background-color: rgba(0, 0, 0, 0.1);
            }
    </style>
    <header class="benner">
        <h1>@Model.ProjectName</h1>
    </header>

    <main>
        <div class="detaylar-karti">
            <img src="@Model.ImageURL" alt="Ürün Resmi">
            <div class="detaylar-icerik">
                @*<h2>@Model.PageTitle</h2>*@
                <p>@Html.Raw(@Model.Description)</p>
                <ul>
                    <li>


                        <a href="~/ProjectT/ProjectImageDetail/@Model.ProjectID" class="link-butonu">
                            Ürün Resimleri
                        </a>

                    </li>
                </ul>
            </div>
        </div>
    </main>
</body>

