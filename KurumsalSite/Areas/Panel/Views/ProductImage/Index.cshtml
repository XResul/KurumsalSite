@model IEnumerable<KurumsalEntityLayer.Entity.ProductImage>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Resim Ekleme Sayfası</h1>

@using (Html.BeginForm("AddImage", "ProductImage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="ProductID" id="ProductID" value="@ViewContext.RouteData.Values["id"]" />
    <input type="file" name="image" />
    <br />
    <br />
    <button type="submit" class="btn btn-success">Yükle</button>
}

<br />
<a href="~/Panel/Products/index" class="btn btn-default"><i class="fa fa-sign-out"></i> Listeye Dön</a>

<br />
<br />
<br />
<br />
<br />
<br />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <img src="@item.ProductImageURL" style="max-width:70%;" class="a" />

            <p>
                <a href="~/Panel/ProductImage/Delete/@item.ProductImageID" class="btn btn-danger"><i class="fa fa-trash"></i> Kaldır</a>
            </p>

        </div>
    }
</div>
<style>
    .a {
        display: flex;
    }
</style>