@model IEnumerable<KurumsalEntityLayer.Entity.ProjectCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Proje Kategori Sayfası</h2>

<p>
    <a href="~/Panel/ProjectCategory/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>
</p>

<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Kategori Ad
        </th>

        <th>
            @Html.DisplayNameFor(model => model.MetaDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaKey)
        </th>
        <th>
            Durum
        </th>
        <th>İşlem</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.ImageURL" style="max-width:70%;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectCategoryName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.MetaDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaKey)
            </td>
            <td>
                @if (item.IsActive==true)
                {
                    <div class="aktif"></div>
                }
                else
                {
                    <div class="pasif"></div>
                }
            </td>
            <td>
                <a href="~/Panel/ProjectCategory/Edit/@item.ProjectCategoryID" class="btn btn-warning"><i class="fa fa-pencil"></i> Düzenle</a>

                <a href="~/Panel/ProjectCategory/Detail/@item.ProjectCategoryID" class="btn btn-info"><i class="fa fa-info"></i> Detaylar</a>

                <a href="~/Panel/ProjectCategory/Delete/@item.ProjectCategoryID" class="btn btn-danger"><i class="fa fa-trash"></i> Kaldır</a>
            </td>
        </tr>
    }

</table>
