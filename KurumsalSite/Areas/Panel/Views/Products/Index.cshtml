@model IEnumerable<KurumsalEntityLayer.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h2>Ürünler Sayfası</h2>

<p>
    <a href="~/Panel/Products/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni Ürün</a>
</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Kategori
        </th>
        <th>
            Ürün Adı
        </th>

        <th>
            @Html.DisplayNameFor(model => model.MetaDescription)
        </th>
   
        <th>
            Tarih
        </th>
        <th>
            Aktiflik
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.ImageURL" style="max-width:70%;" />
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.ProductCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.MetaDescription)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ProductDate)
        </td>
        <td>
            @if (item.IsActive == true)
            {
                <div class="aktif"></div>
            }
            else
            {
                <div class="pasif"></div>
            }
        </td>
        <td>
            <a href="~/Panel/Products/Edit/@item.ProductID" class="btn btn-warning"><i class="fa fa-pencil"></i> Düzenle</a>
            <a href="~/Panel/Products/Detail/@item.ProductID" class="btn btn-info"><i class="fa fa-info"></i> Detaylar</a>

            <a href="~/Panel/Products/Delete/@item.ProductID" class="btn btn-danger"><i class="fa fa-trash"></i> Kaldır</a>
        </td>
        <td>
            <a href="~/Panel/ProductImage/index/@item.ProductID" class="btn btn-info"><i class="fa fa-picture-o"></i> Resimler</a>

        </td>
    </tr>
}

</table>
